<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using Material 3 -->
    <style name="Theme.FitnessDiary" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Material card style -->
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
    </style>
    
    <!-- Custom Card Style with rounded corners -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:background">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Title Text Style -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Subtitle Text Style -->
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
    </style>
</resources>
