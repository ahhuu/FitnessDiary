<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using Material 3 -->
    <style name="Theme.FitnessDiary" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Material card style -->
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
        
        <!-- Material 3 Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>
    
    <!-- Custom Card Style with rounded corners -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:background">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Title Text Style -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Subtitle Text Style -->
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
        <!-- FAB Style -->
        <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
            <item name="backgroundTint">@color/primary</item>
            <item name="tint">@color/white</item>
        </style>


    <!-- Custom Material Alert Dialog Style -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Dialog</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.Dialog" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">28dp</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_variant</item>
    </style>

    <!-- BottomSheet Style -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.BottomSheet</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- 底部导航栏指示器样式：设为透明以满足视觉轻量化需求 -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00000000</item> <!-- 透明 -->
    </style>

    <!-- 底部导航栏文字样式：更小更紧凑 -->
    <style name="TextAppearance.Nav.Small" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
