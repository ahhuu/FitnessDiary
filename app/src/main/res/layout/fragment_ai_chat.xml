                    <ImageButton
                        android:id="@+id/btnSend"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_send_button"
                        android:elevation="2dp"
                        android:src="@drawable/ic_send"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>
