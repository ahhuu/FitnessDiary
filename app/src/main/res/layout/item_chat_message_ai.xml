<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="4dp"
        app:buttonTint="@color/fitnessdiary_primary" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_nav_ai_filled"
        android:background="#E8F0FE"
        android:padding="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 思考过程 (DeepSeek R1) -->
        <LinearLayout
            android:id="@+id/layout_reasoning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_chat_bubble_ai_premium"
            android:backgroundTint="#F2F2F7"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/btn_toggle_reasoning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                
                <ImageView
                    android:id="@+id/iv_reasoning_arrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="@color/text_secondary" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="思考过程"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_reasoning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:padding="8dp"
                android:text="Reasoning..."
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-light"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:background="@drawable/bg_chat_bubble_ai_premium"
            android:padding="12dp"
            android:text="AI Response"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="3dp"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="#F2F2F7"
            android:textColor="@color/fitnessdiary_primary" />
    </LinearLayout>
</LinearLayout>
