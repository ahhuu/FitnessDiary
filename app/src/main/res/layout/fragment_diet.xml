<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fitnessdiary_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <!-- 日期导航控制条 (归一化视觉对齐) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btn_prev_day"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/fitnessdiary_primary"
                android:contentDescription="前一天" />

            <TextView
                android:id="@+id/tv_selected_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="今日"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/btn_next_day"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/fitnessdiary_primary"
                android:contentDescription="后一天" />
        </LinearLayout>

        <!-- 顶部英雄数据看板 (Hero Dashboard) - 紧凑版 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/fitnessdiary_surface"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 第一行：大数字 + 火焰图标 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <!-- 大数字 -->
                        <TextView
                            android:id="@+id/tv_total_calories"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="56sp"
                            android:textColor="@color/fitnessdiary_primary"
                            android:textStyle="bold" />

                        <!-- 火焰图标 -->
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_hero_fire"
                            android:contentDescription="热量图标" />
                    </LinearLayout>

                    <!-- 第二行：单位描述 + 进度条 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 单位和描述 -->
                        <TextView
                            android:id="@+id/tv_calories_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="千卡 · 今日已摄入"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="12dp" />

                        <!-- 进度条 (Material 3) -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress_calories"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            app:trackCornerRadius="3dp"
                            app:indicatorColor="@color/color_success"
                            app:trackColor="#E0E0E0"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginBottom="8dp" />

                        <!-- 宏量营养素进度条 (双列) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- 蛋白质进度 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                                
                                <com.google.android.material.progressindicator.LinearProgressIndicator
                                    android:id="@+id/progress_protein"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    app:trackCornerRadius="2dp"
                                    app:indicatorColor="#64B5F6"
                                    app:trackColor="#E3F2FD"
                                    android:max="100"
                                    android:progress="0"
                                    android:layout_marginBottom="2dp" />
                                    
                                <TextView
                                    android:id="@+id/tv_protein_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="蛋白质: 0/0"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>

                            <!-- 碳水进度 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <com.google.android.material.progressindicator.LinearProgressIndicator
                                    android:id="@+id/progress_carbs"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    app:trackCornerRadius="2dp"
                                    app:indicatorColor="#FFD54F"
                                    app:trackColor="#FFF8E1"
                                    android:max="100"
                                    android:progress="0"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:id="@+id/tv_carbs_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="碳水: 0/0"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 中部：餐点网格 (2x2) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="false"
            android:layout_marginBottom="16dp">

            <!-- 早餐 -->
            <include
                android:id="@+id/card_breakfast"
                layout="@layout/include_meal_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp" />

            <!-- 午餐 -->
            <include
                android:id="@+id/card_lunch"
                layout="@layout/include_meal_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp" />

            <!-- 晚餐 -->
            <include
                android:id="@+id/card_dinner"
                layout="@layout/include_meal_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp" />

            <!-- 加餐 -->
            <include
                android:id="@+id/card_snack"
                layout="@layout/include_meal_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp" />

        </GridLayout>
        
        <!-- 底部：食物百科入口 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_food_wiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/fitnessdiary_surface"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="搜索图标" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询食物热量/营养素..."
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />
                    
            </LinearLayout>
            
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    
    </androidx.core.widget.NestedScrollView>

    <!-- 废弃 FAB (设为 GONE) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="添加饮食记录"
        app:tint="@color/white"
        app:backgroundTint="@color/fitnessdiary_primary"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
