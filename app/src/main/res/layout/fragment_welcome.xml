<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/anim_fade_in_short"
        android:outAnimation="@anim/anim_fade_out_short">

        <!-- Stage 1: Landing (封面页) -->
        <LinearLayout
            android:id="@+id/layout_landing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/background"
            android:padding="32dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/img_welcome_hero"
                android:scaleType="centerInside"
                android:layout_marginBottom="40dp"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启您的健康之旅"
                android:textSize="20sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="48dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_to_setup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="立即定制"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_skip"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="以后再说"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary" />
        </LinearLayout>

        <!-- Stage 2: Setup (表单页) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageButton
                    android:id="@+id/btn_back_to_landing"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/text_primary"
                    android:layout_marginBottom="16dp"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完善资料"
                    android:textSize="28sp"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <!-- 昵称 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_nickname"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:background="@android:color/transparent" />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 身高 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_height"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:background="@android:color/transparent"
                        android:digits="0123456789." />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 体重 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_weight"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:background="@android:color/transparent"
                        android:digits="0123456789." />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 年龄 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_age"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:background="@android:color/transparent" />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 其他选择 (保持 Chip 样式但优化间距) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_gender_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:checkedChip="@id/chip_female"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender_female"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender_male"
                        style="@style/Widget.Material3.Chip.Filter" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健身目标"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_goal_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:checkedChip="@id/chip_lose_fat"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_lose_fat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal_lose_fat"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_gain_muscle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal_gain_muscle"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_maintain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal_maintain"
                        style="@style/Widget.Material3.Chip.Filter" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动水平"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_activity_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:checkedChip="@id/chip_sedentary"
                    android:layout_marginBottom="32dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sedentary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="久坐"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轻度活动"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_moderate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中度活动"
                        style="@style/Widget.Material3.Chip.Filter" />
                </com.google.android.material.chip.ChipGroup>

                <!-- 卡路里预览 -->
                <TextView
                    android:id="@+id/tv_calorie_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计每日目标：2000 千卡"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center_horizontal" />

                <!-- 开始按钮 (仅在表单页底部) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="开启探索"
                    android:textSize="16sp"
                    app:cornerRadius="28dp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </ViewFlipper>
</ScrollView>
