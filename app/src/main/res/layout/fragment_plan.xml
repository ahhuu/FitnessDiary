<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fitnessdiary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部英雄数据看板 (Hero Dashboard) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/fitnessdiary_surface"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- 左侧：数据展示 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 大数字 -->
                    <TextView
                        android:id="@+id/tv_plan_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="56sp"
                        android:textColor="@color/fitnessdiary_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- 单位和描述 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个 · 活跃计划"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    
                </LinearLayout>

                <!-- 右侧：图标与覆盖部位 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_hero_dumbbell"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="训练图标" />

                    <!-- Plan 10: 覆盖部位显示 -->
                    <TextView
                        android:id="@+id/tv_covered_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 训练计划列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_plans"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:visibility="gone" />

        <!-- 无计划提示 -->
        <TextView
            android:id="@+id/tv_no_plans"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/plan_no_plans"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />
    </LinearLayout>

    <!-- FAB 添加按钮 (Gemini 风格) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/plan_add"
        app:backgroundTint="@color/fitnessdiary_accent_container"
        app:tint="@color/fitnessdiary_on_accent_container"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
