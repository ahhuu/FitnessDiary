<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fitnessdiary_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 顶部英雄数据看板 (Hero Dashboard - 已精密紧凑化) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fitnessdiary_surface"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- 左侧：活跃计划数 (保持大气) -->
                    <LinearLayout
                        android:id="@+id/layout_hero_stats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/tv_plan_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="56sp"
                            android:textColor="@color/fitnessdiary_primary"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个 · 活跃计划"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- 右侧：图标与标签垂直堆叠 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/layout_hero_stats"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/iv_hero_icon"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_hero_dumbbell"
                            android:contentDescription="训练图标" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_categories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            app:chipSpacingHorizontal="4dp"
                            app:chipSpacingVertical="-4dp" />

                        <TextView
                            android:id="@+id/tv_covered_categories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="暂无目标"
                            android:textSize="11sp"
                            android:textColor="@color/text_hint"
                            android:visibility="gone" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        <!-- 训练计划列表 (修正高度以适配 NestedScrollView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_plans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:visibility="gone" />

        <!-- 无计划提示 (修正高度) -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_hero_dumbbell"
                app:tint="@color/fitnessdiary_surface_variant"
                android:layout_marginBottom="16dp"
                android:alpha="0.5" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无训练计划"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击右下角按钮开启你的健身之旅"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

    <!-- 计划添加按钮 (同步饮食页风格：圆形按钮) -->
    <ImageButton
        android:id="@+id/fab_add_plan"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/bg_dark_circle"
        android:src="@android:drawable/ic_input_add"
        app:tint="@android:color/white"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:elevation="6dp"
        android:contentDescription="@string/plan_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
