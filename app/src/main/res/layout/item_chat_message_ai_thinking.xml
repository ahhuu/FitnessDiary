<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_bubble_ai_premium"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/fitnessdiary_primary"
            style="@android:style/Widget.Material.ProgressBar.Small"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI"
                android:textSize="11sp"
                android:textColor="@color/fitnessdiary_primary"
                android:alpha="0.8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_thinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在整理器材..."
                android:textSize="13sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
