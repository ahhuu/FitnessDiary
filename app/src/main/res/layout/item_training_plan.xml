<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/fitnessdiary_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- 左侧：媒体缩略图 (圆角) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_media_thumbnail"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:background="@color/fitnessdiary_surface_variant"
            app:srcCompat="@drawable/ic_placeholder_plan"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            android:contentDescription="训练演示" />

        <!-- 中间：垂直信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平板卧推"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_sets_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 组 × 12 次"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_plan_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述信息"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 右侧：操作 (更紧凑) -->
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/error"
            android:alpha="0.7"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="删除" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
